# Environment Configuration for Nyx Venatrix
# Copy this to .env and fill in your actual values

# ============================================================================
# API KEYS (REQUIRED)
# ============================================================================

# X.AI Grok API (Primary LLM)
GROK_API_KEY=your-grok-api-key-here

# OpenAI API (Embeddings + Fallback LLM)
OPENAI_API_KEY=your-openai-api-key-here

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================

# Primary agent model
AGENT_MODEL=grok-beta

# Embedding model for matching
EMBEDDING_MODEL=text-embedding-3-small

# ============================================================================
# DATABASE
# ============================================================================

# PostgreSQL connection
POSTGRES_USER=nyx
POSTGRES_PASSWORD=nyx_password
POSTGRES_DB=nyx_venatrix
DATABASE_URL=postgresql://nyx:nyx_password@localhost:5432/nyx_venatrix

# ============================================================================
# VECTOR DATABASE
# ============================================================================

# Qdrant vector store
QDRANT_URI=http://localhost:6333
QDRANT_API_KEY=

# ============================================================================
# CACHING & QUEUING
# ============================================================================

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================================
# OBSERVABILITY (Optional but Recommended)
# ============================================================================

# MLflow for experiment tracking
MLFLOW_TRACKING_URI=file:///app/mlruns
# Or use remote: http://mlflow-server:5000

# Langfuse for LLM tracing
LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================

# Telegram for 2FA/CAPTCHA notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# 2captcha for automated CAPTCHA solving
CAPTCHA_API_KEY=

# KDB+ for salary oracle (optional)
KDB_LICENSE_B64=
KDB_HOST=localhost
KDB_PORT=5000

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Agent worker configuration
MAX_CONCURRENT_WORKERS=5
SESSION_MAX_DURATION_SECONDS=28800  # 8 hours
SESSION_MAX_APPLICATIONS=300

# Browser configuration
HEADLESS_BROWSER=true
BROWSER_TIMEOUT_MS=60000

# Stealth settings
ENABLE_RATE_LIMITING=true
ENABLE_STEALTH_MODE=true

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Environment
NODE_ENV=development
LOG_LEVEL=INFO

# API URLs for local development
BACKEND_URL=http://localhost:3000
AGENT_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# ============================================================================
# SECURITY (Production Only)
# ============================================================================

# JWT secret for API authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# DOCKER-SPECIFIC
# When running via docker-compose, these are auto-configured
# ============================================================================

# Set automatically by docker-compose:
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/nyx_venatrix
# REDIS_HOST=redis
# QDRANT_URI=http://qdrant:6333
# AGENT_URL=http://agent:8000
